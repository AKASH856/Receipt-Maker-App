<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/gradient1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="320dp"
            android:layout_height="175dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:minHeight="1200dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            tools:ignore="RtlHardcoded,UnusedAttribute">


            <LinearLayout
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="#9177E5"
                tools:ignore="Orientation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:text="GANESH"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ganesh1"
                android:keyboardNavigationCluster="true"
                tools:ignore="ContentDescription" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="70dp"
                android:fontFamily="serif"
                android:text="We pray that Ganesha bestows you with happiness, wisdom, good health and prosperity!"
                android:textStyle="italic"
                android:textSize="12dp"
                tools:ignore="HardcodedText,SpUsage" />

        </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="320dp"
                android:layout_height="175dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                tools:ignore="RtlHardcoded,UnusedAttribute">


                <LinearLayout
                    android:id="@+id/c2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#E96DA4"
                    tools:ignore="Orientation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="serif"
                    android:text="NAVRATRI"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SpUsage" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="serif"
                    android:textStyle="italic"
                    android:text="Let the spirit of these pious Navratri days bring you hope and courage in life. Happy Navratri to al"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/dandiya1"
                    tools:ignore="ContentDescription" />

            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="320dp"
            android:layout_height="175dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            tools:ignore="RtlHardcoded,UnusedAttribute">


            <LinearLayout
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="#FFC624"
                tools:ignore="Orientation" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="serif"
                    android:textStyle="italic"
                    android:text="May Lord Krishna visit your home and take away all the misery and sorrow.Happy Janmashtami"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText,SpUsage" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="32dp"
                android:fontFamily="serif"
                android:text="JANMASHTAMI"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/janmashtami1"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="320dp"
            android:layout_height="175dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            tools:ignore="RtlHardcoded,UnusedAttribute">


            <LinearLayout
                android:id="@+id/c4"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="#80D2E0"
                tools:ignore="Orientation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="35dp"
                android:fontFamily="serif"
                android:text="HOLI"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="65dp"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:text="Take a dip in colours of love, joy, and happiness this Holi"
                android:textSize="15dp"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/holi1"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="320dp"
            android:layout_height="175dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            tools:ignore="RtlHardcoded,UnusedAttribute">


            <LinearLayout
                android:id="@+id/c5"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="#E94D5A"
                tools:ignore="Orientation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:text="SCHOOL"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="70dp"
                android:fontFamily="serif"
                android:text="On tapping on this card u can save user data and make a pdf of it too"
                android:textSize="15dp"
                tools:ignore="HardcodedText,SpUsage" />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/school"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>
